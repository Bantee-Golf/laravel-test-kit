{
	"name": "emedia/laravel-test-kit",
	"description": "Testing Helper Functions",
	"keywords": [
		"emedia",
		"testing",
		"test kit"
	],
	"type": "library",
	"license": "proprietary",
	"homepage": "https://bitbucket.org/elegantmedia/laravel-test-kit/",
	"authors": [
		{
			"name": "Shane Perera",
			"email": "shane@elegantmedia.com.au"
		}
	],
	"require": {
		"php" : "^8.0",
		"illuminate/support": "^9.0"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.0",
		"swiftmailer/swiftmailer": "^6.2"
	},
	"autoload": {
		"psr-4": {
			"EMedia\\TestKit\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"EMedia\\TestKit\\": "tests"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true
	},
	"scripts": {
		"test": "phpunit",
		"check-style": "phpcs src tests",
		"fix-style": "phpcbf src tests"
	}
}
